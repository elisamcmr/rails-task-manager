<h1 class="mb-4">My Tasks</h1>

<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>


<%= link_to "Add a new task", new_task_path, class: 'btn btn-primary mb-3' %>
